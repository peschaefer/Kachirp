<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="533.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs222.GUIControllers.QuestionCreatorController">
    <VBox alignment="CENTER" layoutX="88.0" layoutY="96.0" prefHeight="342.0" prefWidth="624.0">
        <HBox>
            <VBox prefWidth="125.0">
                <Label prefHeight="25.0" text="Question Bank Name:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
                <Label prefHeight="25.0" text="Current Question:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
                <Label prefHeight="25.0" text="Correct Answer:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
                <Label prefHeight="25.0" text="Incorrect Answer:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
                <Label prefHeight="25.0" text="Incorrect Answer:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
                <Label prefHeight="25.0" text="Incorrect Answer:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </VBox.margin></Label>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </VBox>
            <VBox>
                <TextField fx:id="questionBankName" onKeyPressed="#enableSaveBankButton" onKeyReleased="#enableSaveBankButton" prefHeight="25.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
                <TextField fx:id="questionTextField" onKeyPressed="#enableSubmitQuestionButton" prefHeight="25.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
                <TextField fx:id="correctAnswerField" onKeyPressed="#enableSubmitQuestionButton" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
                <TextField fx:id="incorrectField3" onKeyPressed="#enableSubmitQuestionButton" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
                <TextField fx:id="incorrectField2" onKeyPressed="#enableSubmitQuestionButton" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
                <TextField fx:id="incorrectField1" onKeyPressed="#enableSubmitQuestionButton" prefWidth="400.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="3.0" top="5.0" />
               </VBox.margin></TextField>
            </VBox>
        </HBox>
        <Group>
            <Button fx:id="submitQuestionButton" disable="true" layoutY="-14.0" mnemonicParsing="false" onAction="#addQuestion" prefWidth="140.0" text="Submit Question">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button fx:id="saveBankButton" disable="true" layoutY="25.0" mnemonicParsing="false" onAction="#submitBank" prefWidth="140.0" text="Save Question Bank">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
        </Group>
    </VBox>
   <DialogPane fx:id="overwriteDialogBox" layoutX="220.0" layoutY="176.0" maxHeight="180.0" maxWidth="360.0" minHeight="180.0" minWidth="360.0" prefHeight="180.0" prefWidth="360.0" visible="false">
      <content>
          <VBox prefHeight="200.0" prefWidth="100.0">
              <Label alignment="CENTER" minHeight="90.0" prefHeight="90.0" prefWidth="340.0" text="This question bank already exists, would you like to overwrite it?" textAlignment="CENTER" wrapText="true">
                 <VBox.margin>
                     <Insets />
                 </VBox.margin>
              </Label>
              <HBox prefHeight="100.0" prefWidth="200.0">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
                  <padding>
                      <Insets top="5.0" />
                  </padding>
                  <Button mnemonicParsing="false" onAction="#submitOverwrittenBank" text="  Yes  ">
                      <HBox.margin>
                          <Insets left="85.0" right="50.0" />
                      </HBox.margin>
                      <font>
                          <Font size="16.0" />
                      </font>
                      <cursor>
                          <Cursor fx:constant="HAND" />
                      </cursor>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#allowRename" text="  No  ">
                      <font>
                          <Font size="16.0" />
                      </font>
                      <cursor>
                          <Cursor fx:constant="HAND" />
                      </cursor>
                  </Button>
              </HBox>
          </VBox>
      </content>
   </DialogPane>
</AnchorPane>
